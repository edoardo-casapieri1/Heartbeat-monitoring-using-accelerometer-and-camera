<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unipi.mobile">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HeartbeatCamera">
        <activity android:name=".HRCameraInstructions"></activity>
        <activity
            android:name=".HistoryActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CameraHRResult"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SCGActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" /> <!-- The "orientation" value prevents restarts when the screen orientation changes -->
        <!--
 Portrait is an orientation where the screen width is less than or equal to the screen
        height and depending on platform convention locking the screen to portrait
        can represent portrait-primary, portrait-secondary or both.
        -->
        <activity
            android:name=".HRCameraComputer"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>